<div class="row">
    <div class="col-12">
        <div class="card">
            <div class="card-header d-flex justify-content-between align-items-center">
                <div>
                    <i class="bi bi-lightbulb-fill"></i> Gerenciar Conhecimentos (Admin)
                </div>
                <a href="/conhecimentos/admin/criar" class="btn btn-primary btn-sm">
                    <i class="bi bi-plus-circle"></i> Novo Conhecimento
                </a>
            </div>
            <div class="card-body">
                {{#if erro}}
                <div class="alert alert-danger alert-dismissible fade show" role="alert">
                    {{erro}}
                    <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                </div>
                {{/if}}

                {{#if sucesso}}
                <div class="alert alert-success alert-dismissible fade show" role="alert">
                    {{sucesso}}
                    <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                </div>
                {{/if}}

                {{#if conhecimentos.length}}
                <div class="table-responsive">
                    <table class="table table-striped table-hover">
                        <thead>
                            <tr>
                                <th>ID</th>
                                <th>Nome</th>
                                <th>Descrição</th>
                                <th>Alunos com este conhecimento</th>
                                <th style="width: 150px;">Ações</th>
                            </tr>
                        </thead>
                        <tbody>
                            {{#each conhecimentos}}
                            <tr>
                                <td>{{this.id}}</td>
                                <td><strong>{{this.nome}}</strong></td>
                                <td class="text-muted small">{{this.descricao}}</td>
                                <td>
                                    <span class="badge bg-info">{{this.totalAlunos}} alunos</span>
                                </td>
                                <td>
                                    <a href="/conhecimentos/admin/editar/{{this.id}}" class="btn btn-sm btn-warning" title="Editar">
                                        <i class="bi bi-pencil-fill"></i>
                                    </a>
                                    <button onclick="excluirConhecimento({{this.id}}, '{{this.nome}}')" 
                                            class="btn btn-sm btn-danger" title="Excluir">
                                        <i class="bi bi-trash-fill"></i>
                                    </button>
                                </td>
                            </tr>
                            {{/each}}
                        </tbody>
                    </table>
                </div>
                {{else}}
                <p class="text-muted text-center mb-0">Nenhum conhecimento cadastrado.</p>
                {{/if}}
            </div>
        </div>
    </div>
</div>

<script>
async function excluirConhecimento(id, nome) {
    if (!confirm(`Tem certeza que deseja excluir o conhecimento "${nome}"?\n\nEsta ação NÃO poderá ser desfeita e falhará se houver alunos vinculados.`)) {
        return;
    }

    try {
        const response = await fetch(`/api/conhecimentos/admin/${id}`, {
            method: 'DELETE'
        });

        const data = await response.json();

        if (!response.ok) {
            alert(data.error || 'Erro ao excluir conhecimento');
            return;
        }

        window.location.reload();
    } catch (error) {
        console.error('Erro:', error);
        alert('Erro ao excluir conhecimento');
    }
}
</script>

