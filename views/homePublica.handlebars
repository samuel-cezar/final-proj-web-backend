<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-lg-10">
            <div class="card shadow-lg">
                <div class="card-body text-center p-5">
                    <img src="/images/logo.svg" alt="Logo" style="width: 120px; margin-bottom: 30px;">
                    <h1 class="display-4 mb-3">Sistema de Portfólio Acadêmico</h1>
                    <p class="lead text-muted mb-5">
                        Explore projetos desenvolvidos por alunos e descubra suas áreas de conhecimento
                    </p>

                    <!-- Cards de Acesso Público -->
                    <div class="row mb-4">
                        <div class="col-md-4 mb-3">
                            <div class="card h-100 border-primary">
                                <div class="card-body text-center">
                                    <i class="bi bi-folder-fill" style="font-size: 3rem; color: var(--primary-color);"></i>
                                    <h5 class="mt-3">Projetos</h5>
                                    <p class="text-muted small">Visualize todos os projetos desenvolvidos pelos alunos</p>
                                    <a href="/projetos" class="btn btn-primary btn-sm">Ver Projetos</a>
                                </div>
                            </div>
                        </div>

                        <div class="col-md-4 mb-3">
                            <div class="card h-100 border-info">
                                <div class="card-body text-center">
                                    <i class="bi bi-filter-circle-fill" style="font-size: 3rem; color: #0dcaf0;"></i>
                                    <h5 class="mt-3">Filtrar Projetos</h5>
                                    <p class="text-muted small">Busque projetos por palavra-chave específica</p>
                                    <a href="/projetos/palavra-chave" class="btn btn-info btn-sm">Filtrar</a>
                                </div>
                            </div>
                        </div>

                        <div class="col-md-4 mb-3">
                            <div class="card h-100 border-success">
                                <div class="card-body text-center">
                                    <i class="bi bi-bar-chart-fill" style="font-size: 3rem; color: var(--success-color);"></i>
                                    <h5 class="mt-3">Relatório</h5>
                                    <p class="text-muted small">Proporção de alunos por conhecimento</p>
                                    <a href="/relatorio/conhecimentos" class="btn btn-success btn-sm">Ver Relatório</a>
                                </div>
                            </div>
                        </div>
                    </div>

                    <!-- Login -->
                    <div class="mt-5 pt-4 border-top">
                        <p class="text-muted mb-3">Você é aluno ou administrador?</p>
                        <a href="/login" class="btn btn-outline-primary btn-lg">
                            <i class="bi bi-box-arrow-in-right"></i> Fazer Login
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

