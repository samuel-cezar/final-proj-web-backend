<div class="row">
    <div class="col-12">
        <div class="card">
            <div class="card-header d-flex justify-content-between align-items-center">
                <span><i class="bi bi-people-fill"></i> Lista de Alunos</span>
                {{#if admin}}
                <a href="/alunos/criar" class="btn btn-light btn-sm">
                    <i class="bi bi-plus-circle"></i> Novo Aluno
                </a>
                {{/if}}
            </div>
            <div class="card-body">
                {{#if alunos.length}}
                <div class="table-responsive">
                    <table class="table table-hover">
                        <thead>
                            <tr>
                                <th>ID</th>
                                <th>Nome</th>
                                <th>Email</th>
                                <th>Matrícula</th>
                                <th>Curso</th>
                                <th>Data Nascimento</th>
                                <th>Disciplinas</th>
                                {{#if admin}}
                                <th class="text-end">Ações</th>
                                {{/if}}
                            </tr>
                        </thead>
                        <tbody>
                            {{#each alunos}}
                            <tr>
                                <td><strong>#{{this.id}}</strong></td>
                                <td>{{this.nome}}</td>
                                <td>{{this.email}}</td>
                                <td>{{#if this.matricula}}{{this.matricula}}{{else}}<span class="text-muted">-</span>{{/if}}</td>
                                <td>{{#if this.curso}}{{this.curso}}{{else}}<span class="text-muted">-</span>{{/if}}</td>
                                <td>{{this.dataNascimento}}</td>
                                <td>
                                    {{#if this.disciplinas}}
                                        {{#each this.disciplinas}}
                                        <span class="badge bg-primary me-1">{{this.nome}}</span>
                                        {{/each}}
                                    {{else}}
                                        <span class="text-muted">Nenhuma</span>
                                    {{/if}}
                                </td>
                                {{#if ../admin}}
                                <td>
                                    <div class="action-buttons">
                                        <a href="/alunos/editar/{{this.id}}" class="btn btn-warning btn-sm">
                                            <i class="bi bi-pencil-fill"></i> Editar
                                        </a>
                                        <a href="/alunos/gerenciar-disciplinas/{{this.id}}" class="btn btn-info btn-sm">
                                            <i class="bi bi-book"></i> Disciplinas
                                        </a>
                                        <button class="btn btn-danger btn-sm" onclick="deletarAluno({{this.id}})">
                                            <i class="bi bi-trash-fill"></i> Excluir
                                        </button>
                                    </div>
                                </td>
                                {{/if}}
                            </tr>
                            {{/each}}
                        </tbody>
                    </table>
                </div>
                {{else}}
                <div class="empty-state">
                    <div class="empty-state-icon"><i class="bi bi-inbox"></i></div>
                    <div class="empty-state-text">Nenhum aluno cadastrado</div>
                    <p class="text-muted">Comece adicionando um novo aluno ao sistema.</p>
                    {{#if admin}}
                    <a href="/alunos/criar" class="btn btn-primary mt-3">
                        <i class="bi bi-plus-circle"></i> Adicionar Primeiro Aluno
                    </a>
                    {{/if}}
                </div>
                {{/if}}
            </div>
        </div>
    </div>
</div>

<script>
function deletarAluno(id) {
    if (confirm('Tem certeza que deseja excluir este aluno?')) {
        fetch(`/api/alunos/${id}`, {
            method: 'DELETE'
        })
        .then(response => {
            if (response.ok) {
                window.location.reload();
            } else {
                alert('Erro ao excluir aluno');
            }
        });
    }
}
</script>

