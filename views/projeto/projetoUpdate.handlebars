<div class="row">
    <div class="col-12">
        <div class="card">
            <div class="card-header">
                <i class="bi bi-pencil-fill"></i> Editar Projeto
            </div>
            <div class="card-body">
                {{#if erro}}
                <div class="alert alert-danger">
                    <i class="bi bi-exclamation-triangle-fill"></i> {{erro}}
                </div>
                {{/if}}
                
                <form method="POST" action="/projetos/editar/{{projeto.id}}">
                    <div class="mb-3">
                        <label for="nome" class="form-label">Nome do Projeto *</label>
                        <input type="text" class="form-control" id="nome" name="nome" 
                               value="{{projeto.nome}}" required>
                    </div>
                    
                    <div class="mb-3">
                        <label for="resumo" class="form-label">Resumo (máx. 240 caracteres) *</label>
                        <textarea class="form-control" id="resumo" name="resumo" rows="3" 
                                  maxlength="240" required>{{projeto.resumo}}</textarea>
                        <div class="form-text">
                            <span id="charCount">{{projeto.resumo.length}}</span>/240 caracteres
                        </div>
                    </div>
                    
                    <div class="mb-3">
                        <label for="linkExterno" class="form-label">Link Externo (GitHub, etc.) *</label>
                        <input type="url" class="form-control" id="linkExterno" name="linkExterno" 
                               value="{{projeto.linkExterno}}" required>
                        <div class="form-text">Insira uma URL válida</div>
                    </div>
                    
                    <div class="mb-3">
                        <label class="form-label">Palavras-chave</label>
                        <div class="row">
                            {{#each palavrasChave}}
                            <div class="col-md-4 col-sm-6 mb-2">
                                <div class="form-check">
                                    <input class="form-check-input" type="checkbox" name="palavrasChaveIds" 
                                           value="{{this.id}}" id="palavra-{{this.id}}" 
                                           {{#if this.selecionado}}checked{{/if}}>
                                    <label class="form-check-label" for="palavra-{{this.id}}">
                                        {{this.nome}}
                                        {{#if this.categoria}}
                                        <small class="text-muted">({{this.categoria}})</small>
                                        {{/if}}
                                    </label>
                                </div>
                            </div>
                            {{/each}}
                        </div>
                    </div>
                    
                    <div class="d-flex gap-2">
                        <button type="submit" class="btn btn-primary">
                            <i class="bi bi-check-circle"></i> Salvar Alterações
                        </button>
                        <a href="/projetos/meus" class="btn btn-secondary">
                            <i class="bi bi-x-circle"></i> Cancelar
                        </a>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

<script>
// Contador de caracteres
document.getElementById('resumo').addEventListener('input', function() {
    document.getElementById('charCount').textContent = this.value.length;
});
</script>

