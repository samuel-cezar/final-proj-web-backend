<div class="row">
    <div class="col-12">
        <div class="card">
            <div class="card-header">
                <i class="bi bi-house-fill"></i> Bem-vindo ao Sistema de Portfólio Acadêmico
            </div>
            <div class="card-body">
                <h3 class="mb-4 text-center">Olá, {{login}}!</h3>
                <p class="lead mb-4 text-center">Gerencie seus projetos, conhecimentos e informações acadêmicas.</p>
                
                <!-- Resumo do Portfólio -->
                <div class="row mb-5">
                    <div class="col-md-6 mb-4">
                        <div class="card h-100 border-primary">
                            <div class="card-header bg-primary text-white">
                                <i class="bi bi-folder-fill"></i> Meus Projetos Recentes
                            </div>
                            <div class="card-body">
                                {{#if projetos.length}}
                                <ul class="list-group list-group-flush">
                                    {{#each projetos}}
                                    <li class="list-group-item">
                                        <strong>{{this.nome}}</strong>
                                        <p class="text-muted mb-0 small">{{this.resumo}}</p>
                                    </li>
                                    {{/each}}
                                </ul>
                                <div class="text-center mt-3">
                                    <a href="/projetos/meus" class="btn btn-primary btn-sm">Ver Todos ({{totalProjetos}})</a>
                                </div>
                                {{else}}
                                <p class="text-muted text-center mb-0">Nenhum projeto cadastrado ainda.</p>
                                <div class="text-center mt-3">
                                    <a href="/projetos/criar" class="btn btn-outline-primary btn-sm">Criar Primeiro Projeto</a>
                                </div>
                                {{/if}}
                            </div>
                        </div>
                    </div>
                    
                    <div class="col-md-6 mb-4">
                        <div class="card h-100 border-success">
                            <div class="card-header bg-success text-white">
                                <i class="bi bi-star-fill"></i> Meus Principais Conhecimentos
                            </div>
                            <div class="card-body">
                                {{#if conhecimentos.length}}
                                <ul class="list-group list-group-flush">
                                    {{#each conhecimentos}}
                                    <li class="list-group-item d-flex justify-content-between align-items-center">
                                        {{this.nome}}
                                        <span class="badge bg-success">Nível {{this.nivel}}/10</span>
                                    </li>
                                    {{/each}}
                                </ul>
                                <div class="text-center mt-3">
                                    <a href="/conhecimentos/meus" class="btn btn-success btn-sm">Gerenciar Conhecimentos</a>
                                </div>
                                {{else}}
                                <p class="text-muted text-center mb-0">Nenhum conhecimento cadastrado.</p>
                                <div class="text-center mt-3">
                                    <a href="/conhecimentos/meus" class="btn btn-outline-success btn-sm">Adicionar Conhecimentos</a>
                                </div>
                                {{/if}}
                            </div>
                        </div>
                    </div>
                </div>
                
                <!-- Acesso Rápido -->
                <h5 class="mb-3">Acesso Rápido</h5>
                <div class="row">
                    <div class="col-md-3 col-sm-6 mb-3">
                        <div class="card h-100 text-center">
                            <div class="card-body">
                                <i class="bi bi-people-fill" style="font-size: 2.5rem; color: var(--primary-color);"></i>
                                <h6 class="mt-2">Alunos</h6>
                                <a href="/alunos" class="btn btn-sm btn-primary">Acessar</a>
                            </div>
                        </div>
                    </div>
                    
                    <div class="col-md-3 col-sm-6 mb-3">
                        <div class="card h-100 text-center">
                            <div class="card-body">
                                <i class="bi bi-book-fill" style="font-size: 2.5rem; color: var(--success-color);"></i>
                                <h6 class="mt-2">Disciplinas</h6>
                                <a href="/disciplinas" class="btn btn-sm btn-success">Acessar</a>
                            </div>
                        </div>
                    </div>
                    
                    <div class="col-md-3 col-sm-6 mb-3">
                        <div class="card h-100 text-center">
                            <div class="card-body">
                                <i class="bi bi-folder-fill" style="font-size: 2.5rem; color: #6f42c1;"></i>
                                <h6 class="mt-2">Projetos</h6>
                                <a href="/projetos" class="btn btn-sm" style="background-color: #6f42c1; color: white;">Ver Todos</a>
                            </div>
                        </div>
                    </div>
                    
                    {{#if admin}}
                    <div class="col-md-3 col-sm-6 mb-3">
                        <div class="card h-100 text-center">
                            <div class="card-body">
                                <i class="bi bi-clipboard-check-fill" style="font-size: 2.5rem; color: var(--warning-color);"></i>
                                <h6 class="mt-2">Matrículas</h6>
                                <a href="/matriculas" class="btn btn-sm btn-warning">Acessar</a>
                            </div>
                        </div>
                    </div>
                    {{/if}}
                </div>
                
                {{#if admin}}
                <div class="alert alert-info mt-4">
                    <i class="bi bi-info-circle-fill"></i> <strong>Acesso Admin:</strong> Você tem permissões completas para gerenciar o sistema.
                </div>
                {{/if}}
            </div>
        </div>
    </div>
</div>

