<div class="row">
    <div class="col-md-8 offset-md-2">
        <div class="card">
            <div class="card-header">
                <i class="bi bi-plus-circle"></i> Nova Palavra-chave
            </div>
            <div class="card-body">
                {{#if erro}}
                <div class="alert alert-danger alert-dismissible fade show" role="alert">
                    {{erro}}
                    <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                </div>
                {{/if}}

                <form method="POST" action="/palavras-chave/criar">
                    <div class="mb-3">
                        <label for="nome" class="form-label">Nome *</label>
                        <input type="text" class="form-control" id="nome" name="nome" required 
                               placeholder="Ex: JavaScript, Python, React...">
                    </div>

                    <div class="mb-3">
                        <label for="descricao" class="form-label">Descrição</label>
                        <textarea class="form-control" id="descricao" name="descricao" rows="3"
                                  placeholder="Breve descrição da palavra-chave"></textarea>
                    </div>

                    <div class="d-flex justify-content-between">
                        <a href="/palavras-chave" class="btn btn-secondary">
                            <i class="bi bi-arrow-left"></i> Voltar
                        </a>
                        <button type="submit" class="btn btn-primary">
                            <i class="bi bi-check-circle"></i> Salvar
                        </button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

